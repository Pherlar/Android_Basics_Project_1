<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#424242"

    tools:context="com.example.chrisl.aboutcmssurveyors.MainActivity">


    <TextView
        android:id="@+id/Header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="36sp"
        android:text="CMS Surveyors"
        android:textColor="@android:color/white"
        android:textSize="26sp"
        android:textStyle="bold"
        app:fontFamily="sans-serif" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_margin="24dp"
        android:src="@drawable/cmslogo"
        />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Header"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-light"
        android:padding="0dp"
        android:text="For all your land surveying needs"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        app:fontFamily="cursive" />


    <TextView
        android:id="@+id/website"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:padding="0dp"
        android:fontFamily="sans-serif-light"
        android:textColor="@android:color/white"
        android:text="www.cmssurveyors.com.au"
        />

    <TextView
        android:id="@+id/phoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/website"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-light"
        android:padding="0dp"
        android:text="Ph: 02 9971 4802"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phoneNumber"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-light"
        android:padding="0dp"
        android:text="2/99A South Creek Road, Cromer 2099"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

   <LinearLayout
       android:id="@+id/imagesline1"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/address"
       android:orientation="horizontal"
       android:paddingTop="10dp">
       >
                <ImageView
                    android:layout_weight="1"
                    android:layout_height="100dp"
                    android:src="@drawable/setout1"
                    android:scaleType="centerCrop"
                    android:paddingLeft="24dp"

                    />

                <ImageView
                    android:layout_weight="1"
                    android:layout_height="100dp"
                    android:src="@drawable/Abercrombiestreet"
                    android:scaleType="centerCrop"
                    android:paddingRight="24dp"

                    />
   </LinearLayout>

    <LinearLayout
        android:id="@+id/imagesline2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imagesline1"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_weight="1"
            android:layout_height="100dp"
            android:paddingLeft="24dp"
            android:src="@drawable/operaHouse"
            android:scaleType="centerCrop"

            />

        <ImageView
            android:layout_weight="1"
            android:layout_height="100dp"
            android:src="@drawable/centrepoint"
            android:paddingRight="24dp"
            android:scaleType="centerCrop"

            />
    </LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ABN"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:padding="6dp"
        android:fontFamily="sans-serif-light"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:text="Working hours:  Mon:Fri (8.00am - 5.00pm)"
        />

    <TextView
        android:id="@+id/ABN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textSize="14sp"
        android:padding="6dp"
        android:fontFamily="sans-serif-light"
        android:textColor="@android:color/white"
        android:text="ABN 79 096 240 201"
        />


</RelativeLayout>